<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:de.hdodenhof="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="300dp"
    android:background="@color/colorPrimaryDarkGrey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="238dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/toplogo" /><!-- ask about logo here-->
    </LinearLayout>






    <!-- maybe make frame or just underline-->

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        android:src="@drawable/avatar"/>
       <!-- app:civ_border_color="@color/colorAccent"
        app:civ_border_width="6dp" -->

    <TextView
        android:id="@+id/nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Kaguya-sama"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Kaguya-sama@gmail.com"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp">


    </TextView>

</LinearLayout>


