    <EditText
        android:id="@+id/username"
        android:layout_width="236dp"
        android:layout_height="39dp"
        android:layout_marginTop="336dp"
        android:autofillHints="NickName"
        android:textColor="@color/colorAccent"
        android:ems="10"
        android:hint="@string/nickname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorAccent"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="236dp"
        android:layout_height="39dp"
        android:layout_marginTop="392dp"
        android:autofillHints="Password"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/register"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:background="@drawable/sign_in_button_shape"
        android:text="@string/action_sign_in"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.387"
        tools:ignore="MissingConstraints"
        tools:text="@string/action_sign_in" />

    <Button
        android:id="@+id/btmContinueWithGoogle"
        android:layout_width="186dp"
        android:layout_height="31dp"
        android:background="@drawable/sign_in_button_shape"
        android:text="@string/continue_with_google"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.142"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="361dp"
        android:layout_height="308dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/btmContinueWithGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/look"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="576dp"
        android:contentDescription="@string/bottom_image"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/wave"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="164dp"
        android:layout_height="32dp"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:text="@string/forgot_my_password"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.142"
        tools:ignore="SmallSp" />

